<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <!-- Card -->
            <div class="card">
            
                <!-- Card image -->
                <img class="card-img-top" style="height: 300px; width: 300px;" src=" <%= product.imageUrl %>" alt="<%= product.title %> ">
            
                <!-- Card content -->
                <div class="card-body">
            
                    <!-- Title -->
                    <h4 class="card-title"><%= product.title %></h4>
                    <!-- Price -->
                    <h4 class="card-title"><%= product.price %></h4>
                    <!-- Text -->
                    <p class="card-text"><%= product.description %></p>
                    <!-- Button -->
                    <a href="#" class="btn btn-primary">Add To Cart</a>
            
                </div>
            
            </div>
            <!-- Card -->
        </div>
        <div class="col-md-3"></div>
    </div>
</div>