<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <!-- Card -->
            <div class="card">

                <!-- Card image -->
                <img class="card-img-top" style="height: 300px; width: 300px;" src=" <%= product.imageUrl %>"
                    alt="<%= product.title %> ">

                <!-- Card content -->
                <div class="card-body">

                    <!-- Title -->
                    <h4 class="card-title"><%= product.title %></h4>
                    <!-- Price -->
                    <h4 class="card-title"><%= product.price %></h4>
                    <!-- Text -->
                    <p class="card-text"><%= product.description %></p>
                    <!-- Button -->
                    <form action="/cart" method="POST">
                        <button class="btn btn-black btn-rounded btn-sm px-3 waves-effect" type="submit">Add to
                            Cart</button>
                        <input type="hidden" name="productId" value="<%= product._id %>">
                    </form>

                </div>

            </div>
            <!-- Card -->
        </div>
        <div class="col-md-3"></div>
    </div>
</div>