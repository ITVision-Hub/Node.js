<div class="container my-5 py-3 z-depth-1 rounded">


    <!--Section: Content-->
    <section class="dark-grey-text">
        <h5 class="card-header info-color white-text text-center py-4">
            <strong>Your Card List</strong>
        </h5>
        <% if(prods.length > 0) {%>
        <!-- Shopping Cart table -->
        <div class="table-responsive">

            <table class="table product-table mb-0">

                <!-- Table head -->
                <thead class="mdb-color lighten-5">
                    <tr>
                        <th></th>
                        <th class="font-weight-bold">
                            <strong>Product</strong>
                        </th>
                        <th></th>
                        <th class="font-weight-bold">
                            <strong>Price</strong>
                        </th>
                        <th class="font-weight-bold">
                            <strong>QTY</strong>
                        </th>
                        <th class="font-weight-bold">
                            <strong>Amount</strong>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <!-- /.Table head -->

                <!-- Table body -->
                <tbody>
                    <% prods.forEach(product=>{ %>
                    <!-- First row -->
                    <tr>
                        <th scope="row">
                            <img src="<%= product.imageUrl  %> " alt="<%= product.title  %>"
                                class="img-fluid z-depth-0">
                        </th>
                        <td>
                            <h5 class="mt-3">
                                <strong><%= product.title  %></strong>
                            </h5>
                        </td>
                        <td></td>
                        <td><%= product.price  %></td>
                        <td>
                            <strong><%= product.quantity  %></strong>
                        </td>
                        <td class="font-weight-bold">
                            <strong><%= (product.price * product.quantity) %> </strong>
                        </td>
                        <td>
                            <form action="/delete-cart-item" method="POST">
                                <input type="hidden" name="prdocuctId" value="<%= product._id %>">
                                <button type="submit" class="btn btn-sm btn-danger" data-toggle="tooltip"
                                    data-placement="top" title="Remove item">X
                                </button>
                            </form>
                        </td>
                    </tr>
                    <!-- /.First row -->
                    <% }) %>
                    <!-- Second row -->
                    <tr>
                        <td colspan="7" class="text-right">
                            <button type="button" class="btn btn-primary btn-rounded">Order Now
                                <i class="fas fa-angle-right right"></i>
                            </button>
                        </td>
                    </tr>
                    <!-- Second row -->

                </tbody>
                <!-- /.Table body -->

            </table>

        </div>
        <!-- /.Shopping Cart table -->
        <% }else{ %>
        <h5 class="display-4 text-center my-5">Nothing Here</h5>
        <% } %>

    </section>
    <!--Section: Content-->


</div>